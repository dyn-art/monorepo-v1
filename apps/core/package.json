{
  "name": "@pda/core",
  "version": "0.0.0",
  "description": "Core Backend",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "shx rm -rf dist && tsc",
    "start:dev": "nodemon --config ./nodemon.json",
    "lint": "eslint --cache \"**/*.{js,ts}\"",
    "clean": "shx rm -rf dist && shx rm -rf node_modules && shx -rf .turbo",
    "install:clean": "pnpm run clean && pnpm install",
    "test": "echo \"Error: no test specified\" && exit 1",
    "d:build": "docker build -t bennodev19/pda-core:latest .",
    "d:push": "docker push bennodev19/pda-core",
    "d:release": "npm version patch && pnpm run d:build && pnpm run d:push",
    "db:studio": "npx prisma studio",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate"
  },
  "keywords": [],
  "author": "@bennodev19",
  "license": "MIT",
  "dependencies": {
    "@pda/etsy": "workspace:*",
    "@prisma/client": "^4.13.0",
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "@pda/tsconfig": "workspace:*",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.13",
    "@types/node-cron": "^3.0.7",
    "eslint": "^8.38.0",
    "eslint-config-pda-base": "workspace:*",
    "nodemon": "^2.0.22",
    "prisma": "^4.13.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
