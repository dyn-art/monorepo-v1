    "@pda/tsconfig": "workspace:*",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.13",
    "eslint": "^8.38.0",
    "eslint-config-pda-base": "workspace:*",
    "jest": "^29.5.0",
    "typescript": "^4.9.5"
