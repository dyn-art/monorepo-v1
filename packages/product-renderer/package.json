{
  "name": "@pda/product-renderer",
  "version": "0.0.0",
  "description": "Render Products using Remotion",
  "private": true,
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "pnpm run bundle && shx rm -rf dist && npx esno ../../scripts/build-ts-package.ts",
    "bundle": "shx rm -rf bundle && ts-node ./scripts/bundle",
    "start:dev": "tsc -w",
    "start:remotion": "remotion preview ./ui/src/index.ts --config ./ui/remotion.config.ts",
    "render": "remotion still ./ui/src/index.ts",
    "lint": "eslint --cache \"**/*.{js,ts}\"",
    "clean": "shx rm -rf bundle && shx rm -rf dist && shx rm -rf node_modules && shx rm -rf .turbo",
    "install:clean": "pnpm run clean && pnpm install",
    "test": "jest"
  },
  "keywords": [],
  "author": "@bennodev19",
  "license": "MIT",
  "dependencies": {
    "@figma-plugin/helpers": "^0.15.2",
    "@remotion/renderer": "^3.3.83",
    "mathjs": "^11.8.0",
    "remotion": "^3.3.83",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@pda/jest-presets": "workspace:*",
    "@pda/tsconfig": "workspace:*",
    "@remotion/bundler": "^3.3.83",
    "@remotion/cli": "^3.3.83",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.13",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@types/web": "^0.0.99",
    "@types/webfontloader": "^1.6.35",
    "autoprefixer": "^10.4.14",
    "axios": "^1.3.6",
    "axios-hooks": "^4.0.0",
    "buffer": "^6.0.3",
    "clsx": "^1.2.1",
    "css-loader": "^6.7.3",
    "d3": "^7.8.4",
    "d3-geo": "^3.1.0",
    "eslint": "^8.38.0",
    "eslint-config-pda-base": "workspace:*",
    "geojson": "^0.5.0",
    "jest": "^29.5.0",
    "postcss": "^8.4.23",
    "postcss-loader": "^7.2.4",
    "postcss-preset-env": "^8.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.2",
    "tailwindcss": "^3.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "webpack": "^5.80.0"
  },
  "files": [
    "dist",
    "bundle",
    "README.md"
  ]
}
