{
  "name": "@pda/dtif-to-react",
  "version": "0.0.0",
  "description": "Provides utilities to convert the Design Tree Interchange Format (DTIF) into static ReactJs components.",
  "private": true,
  "source": "./src/index.ts",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "shx rm -rf dist && npx esno ../../scripts/build-ts-package.ts --prod --analyze",
    "start:dev": "tsc -w",
    "lint": "eslint --cache \"**/*.{js,ts}\"",
    "clean": "shx rm -rf dist && shx rm -rf node_modules && shx rm -rf .turbo",
    "install:clean": "pnpm run clean && pnpm install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "@bennodev19",
  "license": "MIT",
  "dependencies": {
    "@figma-plugin/helpers": "^0.15.2",
    "@pda/dtif-types": "workspace:^",
    "@pda/logger": "workspace:^",
    "mathjs": "^11.8.0",
    "webfontloader": "^1.6.28"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@pda/tsconfig": "workspace:*",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@types/webfontloader": "^1.6.35",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.38.0",
    "eslint-config-pda-base": "workspace:*",
    "postcss": "^8.4.23",
    "rollup-plugin-postcss": "^4.0.2",
    "typescript": "^4.9.5"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
