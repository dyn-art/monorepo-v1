{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Hydrogen",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node16",
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "dom.iterable",
            "scripthost",
            "es2020"
        ],
        "allowJs": true,
        "checkJs": true,
        "jsx": "react",
        "types": [
            "vite/client"
        ],
        "esModuleInterop": true,
        "isolatedModules": true,
        "resolveJsonModule": true
    }
}