{
  "name": "@pda/core-client",
  "version": "0.0.0",
  "description": "Client library to communicate with the PDA-Core API",
  "private": true,
  "source": "./src/index.ts",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "shx rm -rf dist && npx esno ../../scripts/build-ts-package.ts --prod",
    "start:dev": "tsc -w",
    "lint": "eslint --cache \"**/*.{js,ts}\"",
    "clean": "shx rm -rf dist && shx rm -rf node_modules && shx rm -rf .turbo",
    "install:clean": "pnpm run clean && pnpm install",
    "test": "vitest run"
  },
  "keywords": [],
  "author": "@bennodev19",
  "license": "MIT",
  "dependencies": {
    "@pda/openapi-fetch": "workspace:*",
    "@pda/logger": "workspace:*"
  },
  "devDependencies": {
    "@pda/viteconfig": "workspace:*",
    "@pda/tsconfig": "workspace:*",
    "@pda/types": "workspace:*",
    "eslint-config-pda-base": "workspace:*"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
