{
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "eslint.enable": true,
    "eslint.alwaysShowStatus": true,
    "eslint.validate": [
        "javascript",
        "typescript"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "search.exclude": {
	    "**/node_modules": true,
	},
    "eslint.workingDirectories": [
        "./apps/chrome",
        "./apps/core",
        "./apps/render-worker",
        "./apps/web",
        "./packages/ai",
        "./packages/etsy",
        "./packages/logger",
        "./packages/map",
        "./packages/music",
        "./packages/ads-renderer",
        "./packages/ads-renderer/ui",
        "./packages/poster-renderer/ui",
        "./packages/poster-renderer",
        "./packages/poster-renderer/ui",
        "./packages/ui",
    ],
    "cSpell.words": [
        "pda"
    ],
    "files.associations": { "*.scss": "postcss" }
}